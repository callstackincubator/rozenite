{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": false,
    "declaration": false,
    "declarationMap": false,
    "emitDeclarationOnly": false,
    "noEmit": true,
    "outDir": "dist",
    "rootDir": "src",
    "tsBuildInfoFile": "dist/tsconfig.app.tsbuildinfo",
    "jsx": "react-jsx",
    "module": "esnext",
    "moduleResolution": "bundler",
    "lib": ["dom", "es2022"],
    "types": ["node"],
    "noUnusedLocals": false,
    "resolveJsonModule": true,
    "allowJs": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.js",
    "src/**/*.jsx",
    "app/**/*.ts",
    "app/**/*.tsx"
  ],
  "exclude": [
    "out-tsc",
    "dist",
    "node_modules",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/*.test.tsx",
    "**/*.spec.tsx",
    "**/*.test.js",
    "**/*.spec.js",
    "**/*.test.jsx",
    "**/*.spec.jsx",
    "src/test-setup.ts"
  ],
  "references": [
    { "path": "../../packages/cli/tsconfig.lib.json" },
    { "path": "../../packages/metro/tsconfig.lib.json" },
    { "path": "../../packages/tools/tsconfig.lib.json" }
  ]
}
