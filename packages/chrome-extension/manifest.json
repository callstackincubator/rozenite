{
  "name": "Rozenite",
  "description": "React Native DevTools for Web",
  "version": "1.0.0",
  "manifest_version": 3,
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "src/service-worker.ts",
    "type": "module"
  },
  "permissions": ["debugger", "tabs", "scripting", "storage", "webNavigation"],
  "host_permissions": [
    "http://localhost:8081/*",
    "https://localhost:8081/*",
    "http://127.0.0.1:8081/*",
    "https://127.0.0.1:8081/*",
    "https://raw.githubusercontent.com/*"
  ],
  "web_accessible_resources": [
    {
      "resources": ["icons/icon48.png"],
      "matches": ["<all_urls>"]
    }
  ]
}
